{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GoClaw Skill (SKILL.md frontmatter)",
  "description": "Schema for SKILL.md YAML frontmatter in GoClaw skills",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the skill (lowercase-with-dashes)",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "version": {
      "type": "string",
      "description": "Semantic version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "author": {
      "type": "string",
      "description": "Author or organization"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the skill"
    },
    "category": {
      "type": "string",
      "enum": ["builtin", "data", "development", "productivity", "communication", "automation", "ai", "finance", "monitoring", "community"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "requires": {
      "type": "object",
      "properties": {
        "bins": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required CLI tools (all must be present)"
        },
        "any_bins": {
          "type": "array",
          "items": { "type": "string" },
          "description": "CLI tools (at least one must be present)"
        },
        "env": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required environment variables"
        },
        "any_env": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Environment variables (at least one must be set)"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for OpenClaw/ClawHub compatibility"
    }
  }
}
