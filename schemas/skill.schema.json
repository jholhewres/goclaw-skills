{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GoClaw Skill",
  "description": "Schema de validação para skills do AgentGo Copilot",
  "type": "object",
  "required": ["name", "version", "description", "category"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Identificador único da skill",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "version": {
      "type": "string",
      "description": "Versão semântica",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "author": {
      "type": "string",
      "description": "Autor ou organização"
    },
    "description": {
      "type": "string",
      "description": "Breve descrição da skill"
    },
    "category": {
      "type": "string",
      "enum": ["productivity", "communication", "development", "data", "automation", "ai", "finance", "monitoring", "builtin", "community"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "config": {
      "type": "object",
      "description": "Schema de configuração da skill"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "parameters": { "type": "object" }
        }
      }
    },
    "system_prompt": {
      "type": "string",
      "description": "Instruções injetadas no system prompt"
    },
    "triggers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Padrões de linguagem natural que ativam a skill"
    }
  }
}
